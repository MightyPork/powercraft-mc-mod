package powercraft.core;

public class PC_GresTickInput extends PC_GresWidget {

	private PC_GresTextEdit ticks;
	private PC_GresTextEdit secs;
	
	public PC_GresTickInput(){
		
	}
	
	@Override
	public PC_CoordI calcSize() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void calcChildPositions() {
		// TODO Auto-generated method stub

	}

	@Override
	protected PC_RectI render(PC_CoordI posOffset, PC_RectI scissorOld, double scale) {
		return null;
	}

	@Override
	public void childRenderer(PC_CoordI posOffset, PC_RectI scissorNew, double scale){
		ticks.updateRenderer(posOffset, scissorNew, scale);
		secs.updateRenderer(posOffset, scissorNew, scale);
	}
	
	@Override
	public MouseOver mouseOver(PC_CoordI mousePos) {
		ticks.getWidgetUnderMouse(mousePos);
		secs.getWidgetUnderMouse(mousePos);
		return MouseOver.THIS;
	}

	@Override
	public boolean mouseClick(PC_CoordI mousePos, int key) {
		
		return false;
	}

	@Override
	public void mouseMove(PC_CoordI mousePos) {
	}

	@Override
	public void mouseWheel(int i) {
	}

	@Override
	public boolean keyTyped(char c, int key) {
		return false;
	}

	@Override
	public void addedToWidget() {
	}

}
