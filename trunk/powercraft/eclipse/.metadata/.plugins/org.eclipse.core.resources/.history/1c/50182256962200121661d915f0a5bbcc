package powercraft.logic;

public class PClo_FlipFlopType {
	/** Number of all the gate types */
	public static final int TOTAL_FLIPFLOP_COUNT = 3;

	@SuppressWarnings("javadoc")
	public static final int D = 0, RS = 1, T = 2;

	/**
	 * Gate names used for localization
	 */
	public static String[] names = new String[TOTAL_FLIPFLOP_COUNT];

	static {
		names[D] = "D";
		names[RS] = "RS";
		names[T] = "T";
	}

	public static boolean getFilpFlopState(int flipflopType, boolean i1, boolean i2, boolean i3, boolean state){
		switch(flipflopType){
		case D:
			if(i1)
				return false;
			if(i3)
				return i2;
			break;
		case RS:
			if(i1)
				return true;
			if(i3)
				return false;
			break;
		case T:
			if(i2==true)
				return !state;
			if(i1 || i3)
				return false;
			break;
		default:
			return false;
		}
		return state;
	}
	
}
